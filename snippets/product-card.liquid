<a href="{{ product.url }}">
  <div
    class="p-4 w-[366px] rounded-[16px] border border-white/90"
    style="box-shadow: 0px 40px 90px 0px rgba(0, 0, 0, 0.06)"
  >
    <img
      src="{{ product.featured_image | img_url: 'master' }}"
      width="400"
      height="400"
      alt="{{ product.title }}"
      class="rounded-[16px] h-[244px] w-full object-fill"
    >
    <div class="mt-[24px] flex flex-col gap-4">
      <div class="flex justify-between items-center h-[80px] ">
        <div>
          <h3
            style="
              color:
              #484848;
              font-family:
              Poppins;
              font-size:
              20px;
              font-style:
              normal;
              font-weight:
              500;
              line-height:
              normal;
            "
          >
            {{ product.title }}
          </h3>
          <p
            style="
              color: #8A8A8A;
              font-family: Poppins;
              font-size: 12px;
              font-style: normal;
              font-weight: 500;
              line-height: 12px;
            "
          >
            {{ product.vendor }}
          </p>
        </div>
        <div class="flex items-center">
          <svg xmlns="http://www.w3.org/2000/svg" width="95" height="19" viewBox="0 0 95 19" fill="none">
            <path fill-rule="evenodd" clip-rule="evenodd" d="M11.6646 7.12771L9.5 0L7.33536 7.12771H0L5.93479 11.742L3.73214 19L9.5 14.5146L15.2679 19L13.0652 11.742L19 7.12771H11.6646Z" fill="#FCA120"/>
            <path fill-rule="evenodd" clip-rule="evenodd" d="M30.6646 7.12771L28.5 0L26.3354 7.12771H19L24.9348 11.742L22.7321 19L28.5 14.5146L34.2679 19L32.0652 11.742L38 7.12771H30.6646Z" fill="#FCA120"/>
            <path fill-rule="evenodd" clip-rule="evenodd" d="M49.6646 7.12771L47.5 0L45.3354 7.12771H38L43.9348 11.742L41.7321 19L47.5 14.5146L53.2679 19L51.0652 11.742L57 7.12771H49.6646Z" fill="#FCA120"/>
            <path fill-rule="evenodd" clip-rule="evenodd" d="M68.6646 7.12771L66.5 0L64.3354 7.12771H57L62.9348 11.742L60.7321 19L66.5 14.5146L72.2679 19L70.0652 11.742L76 7.12771H68.6646Z" fill="#FCA120"/>
            <path fill-rule="evenodd" clip-rule="evenodd" d="M87.6646 7.12771L85.5 0L83.3354 7.12771H76L81.9348 11.742L79.7321 19L85.5 14.5146L91.2679 19L89.0652 11.742L95 7.12771H87.6646Z" fill="#FCA120"/>
          </svg>
        </div>
      </div>

      <p
        style="
          color: #484848;
          font-family: Poppins;
          font-size: 12px;
          font-style: normal;
          font-weight: 500;
          line-height: normal;
        "
      >
        ({{ product.metafields.reviews.rating_count | default: '0' }}) Customer Reviews
      </p>

      {% comment %} price and stock {% endcomment %}

      <div class="flex justify-between items-center">
        <p
          style="
            color: #484848;
            font-family: Poppins;
            font-size: 24px;
            font-style: normal;
            font-weight: 500;
            line-height: 20px; /* 83.333% */
            letter-spacing: -0.24px;
          "
        >
          {{ product.price | money_without_trailing_zeros }}
        </p>
        <p
          style="
            text-align: right;
            font-family: Poppins;
            font-size: 12px;
            font-style: normal;
            font-weight: 400;
            line-height: 20px; /* 166.667% */
            letter-spacing: -0.12px;
          "
        >
          {% if product.available %}
            <p class="text-green-500">In Stock</p>
          {% else %}
            <p class="text-red-500">Sold Out</p>
          {% endif %}
        </p>
      </div>
    </div>
  </div>
</a>
